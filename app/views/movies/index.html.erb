<%= form_with url: '/movies', method: :get, local: true do |f| %>
  <%= f.text_field :keyword %>
  <%= f.radio_button :type, 0, checked: true %>
  <%= f.label :type, "すべて", value: 0 %>
  <%= f.radio_button :type, 1 %>
  <%= f.label :type, '公開予定', valule: 1 %>
  <%= f.radio_button :type, 2 %>
  <%= f.label :type, '公開中', value: 2 %>
  <%= f.submit "search" %>
<% end %>

<% @movie.each do |m| %>
  <ul>
    <li><img src="<%= m.image_url %>" /></li>
    <li><%= link_to m.name, "/movies/#{m.id}" %></li>
    <li><%= m.description %></li>
  </ul>
<% end %>